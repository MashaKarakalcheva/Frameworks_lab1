{% extends 'base.html.twig' %}

{% block title %}Редактирование задачи{% endblock %}

{% block body %}
    <h1>Редактирование/Создание задачи</h1>

    {{ form_start(task_form, {'attr': {'class': 'form-style'}}) }}
    
    {{ form_row(task_form.title, {'attr': {'class': 'input-style', 'placeholder': 'Заголовок задачи'}}) }}
    {{ form_row(task_form.description, {'attr': {'class': 'input-style', 'placeholder': 'Описание задачи'}}) }}
    {{ form_row(task_form.date, {'attr': {'class': 'input-style', 'placeholder': 'Срок выполнения (ГГГГ-ММ-ДД)'}}) }}
    {{ form_row(task_form.category, {'attr': {'class': 'input-style'}}) }}
    
    {{ form_end(task_form) }}

    <style>
    h1 {
    color: #333;

max-width: 345px;
            margin: 0 auto;
            padding: 20px;

  font-size: 30px;
  font-weight: 600;
  background-image: linear-gradient(to left, #553c9a, #b393d3);
  color: transparent;
  background-clip: text;
  -webkit-background-clip: text;
}
        .form-style {
            max-width: 300px;
            margin: 0 auto;
            padding: 20px;
            background: #f9f9f9;
            border-radius: 5px;
        }

        .input-style {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .input-style:focus {
            outline: none;
            border: 1px solid #007bff;
        }
    </style>

{% endblock %}
